<HomeScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        md_bg_color: 'green'
        

        MDTopAppBar:
            type: "small"
            size_hint_x: 1.01
            pos_hint: {"center_x": .5, "center_y": .5}

            MDTopAppBarTitle:
                text: "Login Screen"
                pos_hint: {"center_x": .5}

            MDTopAppBarTrailingButtonContainer:

                MDActionTopAppBarButton:
                    icon: "tune"
                    on_press: root.open_settings()

        # ----------------------------------
        # TOP SECTION (1/3 of leftover space)
        # ----------------------------------

        MDLabel:
            text: "Welcome to HemoTrek!"
            font_style: "Display"
            halign: "center"
            size_hint_y: 0.33
            spacing: "20dp"
            padding: "20dp"
        # ----------------------------------
        # MIDDLE SECTION (1/3 of leftover space)
        # ----------------------------------

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True

            GridLayout:
                cols: 2
                padding: 20
                spacing: 20

                Label:
                    text: "Username:"
                    font_size: '32sp'
                    halign: 'right'
                    valign: 'middle'
                    text_size: self.size

                TextInput:
                    id: username
                    font_size: '32sp'

                Label:
                    text: "Password:"
                    font_size: '32sp'
                    halign: 'right'
                    valign: 'middle'
                    text_size: self.size

                TextInput:
                    id: password
                    font_size: '32sp'



        # ----------------------------------
        # BOTTOM SECTION (1/3 of leftover space)
        # ----------------------------------
        MDBoxLayout:
            orientation: "horizontal"
            size_hint_y: 0.34
            padding: "20dp"
            spacing: "10dp"



        #CLEAR BUTTON
            MDButton:
                style: "elevated"
                on_press: root.open_cleaning_screen()
                pos_hint: {"center_x": 0.25}
                
                MDButtonText:
                    text: "Clear"

        #LOGIN BUTTON
            MDButton:
                style: "elevated"
                on_press: root.open_test_type_screen()
                pos_hint: {"center_x": 0.75}
    
                MDButtonText:
                    text: "Login"
                    