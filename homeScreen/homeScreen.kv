<HomeScreen>:
    MDBoxLayout:
        orientation: 'vertical'        

        MDTopAppBar:
            type: "small"
            size_hint_x: 1.01
            pos_hint: {"center_x": .5, "center_y": .5}

            MDTopAppBarTitle:
                text: "Login Screen"
                pos_hint: {"center_x": .5}

            MDTopAppBarTrailingButtonContainer:

                MDActionTopAppBarButton:
                    icon: "tune"
                    on_press: root.open_settings()

        # ----------------------------------
        # TOP SECTION (1/3 of leftover space)
        # ----------------------------------
        
        FitImage:
            source: "icons/HemoTrekLogo.png"
            size_hint_y: 0.33
            allow_stretch: True
            keep_ratio: True
            spacing: "20dp"
            padding: "20dp"

#        MDLabel:
#            text: "Welcome to HemoTrek!"
#            font_style: "Display"
#            halign: "center"
#            size_hint_y: 0.33
#            spacing: "20dp"
#            padding: "20dp"
        # ----------------------------------
        # MIDDLE SECTION (1/3 of leftover space)
        # ----------------------------------

        MDCard:
            orientation: "vertical"
            size_hint: (None, None)
            size: ("300dp", "220dp")
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            padding: dp(20)
            spacing: dp(20)
            radius: dp(12)
            elevation: 4

            MDTextField:
                id: username
                hint_text: "Username or Email"
                helper_text: "Enter your username or email"
                helper_text_mode: "on_focus"
                icon_right: "account"

            MDTextField:
                id: password
                hint_text: "Password"
                password: True
                icon_right: "key"

            MDButton:
                style: "elevated"
                on_press: 
                    app.username = username.text
                    app.password = password.text

                    root.open_test_type_screen()

                pos_hint: {"center_x": 0.5}

                MDButtonText:
                    text: "Sign In"

        # ----------------------------------
        # BOTTOM SECTION (1/3 of leftover space)
        # ----------------------------------
        MDBoxLayout:
            orientation: "horizontal"
            size_hint_y: 0.34
            padding: "20dp"
            spacing: "10dp"

        #CLEAR BUTTON
            MDButton:
                style: "elevated"
                on_press: root.open_cleaning_screen()
                pos_hint: {"center_x": 0.25}
                
                MDButtonText:
                    text: "Cleaning Instructions"
