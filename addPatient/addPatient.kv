<AddPatient>:
    MDBoxLayout:
        orientation: 'vertical'
        md_bg_color: app.theme_cls.primaryColor

        MDTopAppBar:
            type: "small"
            size_hint_x: 1.01
            pos_hint: {"center_x": .5, "center_y": .5}

            MDTopAppBarLeadingButtonContainer:
                MDActionTopAppBarButton:
                    icon: "menu"

            MDTopAppBarTitle:
                text: "Settings Page"
                pos_hint: {"center_x": .5}

            MDTopAppBarTrailingButtonContainer:

                MDActionTopAppBarButton:
                    icon: "home"
                    on_press: root.return_home()

        # ----------------------------------------------------
        # Scrollable Area for Main Settings
        # ----------------------------------------------------
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True

            GridLayout:
                cols: 2
                padding: 20
                spacing: 20

                # 1) Username Setting
                Label:
                    text: "Name:"
                    font_size: '16sp'
                    halign: 'right'
                    valign: 'middle'
                    text_size: self.size

                TextInput:
                    id: name
                    font_size: '16sp'

                # 2) Dark Mode Switch
                Label:
                    text: "Email:"
                    font_size: '16sp'
                    halign: 'right'
                    valign: 'middle'
                    text_size: self.size

                TextInput:
                    id: email
                    font_size: '16sp'


        # ----------------------------------------------------
        # Bottom Bar for Buttons (Save / Return Home)
        # ----------------------------------------------------
        BoxLayout:
            size_hint_y: None
            height: 60
            padding: [20, 10]
            spacing: 20

            MDButton:
                style: "elevated"
                width: 150

                on_press: root.save_changes(name.text, email.text)
                
                MDButtonText:
                    text: "Save"

            MDButton:
                style: "elevated"
                width: 150

                on_press: root.return_to_patients()

                MDButtonText:
                    text: "Return to Patients"
