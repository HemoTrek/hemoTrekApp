<Login>:
    MDBoxLayout:
        orientation: 'vertical'
        md_bg_color: app.theme_cls.primary_color        

        # ----------------------------------
        # TOP SECTION
        # ----------------------------------
        FitImage:
            source: "icons/hemoTrekLogo.png"
            size_hint_x: 0.8
            size_hint_y: 0.40
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            allow_stretch: True
            keep_ratio: True

        # ----------------------------------
        # MIDDLE SECTION
        # ----------------------------------
        MDCard:
            id: loginCard
            orientation: "vertical"
            size_hint: (0.6, 0.6)
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            padding: dp(20)
            spacing: dp(20)
            radius: dp(12)
            elevation: 4

            MDTextField:
                id: username
                helper_text_mode: "on_focus"
                MDTextFieldHintText:
                    text: "Enter Username or Email"
                MDTextFieldTrailingIcon:
                    icon: "account"

            MDTextField:
                id: password
                password: True
                MDTextFieldHintText:
                    text: "Enter Password"
                MDTextFieldTrailingIcon:
                    icon: "key"

            MDButton:
                style: "elevated"
                pos_hint: {"center_x": 0.5}
                on_press:
                    app.username = username.text
                    app.password = password.text
                    root.open_test_type_screen()

                MDButtonText:
                    text: "Sign In"

        # ----------------------------------
        # BOTTOM SECTION
        # ----------------------------------
        MDBoxLayout:
            orientation: "horizontal"
            size_hint_y: 0.2
            padding: "20dp"
            spacing: "10dp"

            AnchorLayout:
                anchor_x: "center"
                anchor_y: "center"
                
                MDButton:
                    style: "elevated"
                    theme_width: "Custom"
                    height: "128"
                    size_hint_x: 0.4

                    on_press: root.open_cleaning_screen()
                    
                    MDButtonText:
                        text: "Cleaning Instructions"
                        pos_hint: {"center_x": 0.5, "center_y": 0.5}
                        font_style: "Title"
