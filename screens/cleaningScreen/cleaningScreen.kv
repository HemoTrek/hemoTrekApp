<CleaningScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        md_bg_color: app.theme_cls.primary_color        

        MDTopAppBar:
            type: "small"
            size_hint_x: 1.01
            pos_hint: {"center_x": .5, "center_y": .5}

            MDTopAppBarLeadingButtonContainer:
                MDActionTopAppBarButton:
                    icon: "home"
                    on_press: root.return_home()    

            MDTopAppBarTitle:
                text: "Cleaning Instructions"
                pos_hint: {"center_x": .5}

        # ----------------------------------
        # SCROLLABLE INSTRUCTIONS SECTION
        # ----------------------------------
        ScrollView:
            size_hint_y: 0.8
            scroll_wheel_distance: 100
            MDList:
                id: setup_steps
                padding: "20dp"  # Padding around the list
                spacing: "10dp"  # Space between each step
                
        # ----------------------------------
        # BOTTOM SECTION (1/3 of leftover space)
        # ----------------------------------
        MDBoxLayout:
            orientation: "horizontal"
            size_hint_y: 0.2  # Controls vertical space taken
            spacing: "10dp"  # Prevents buttons from touching
        
            AnchorLayout:
                anchor_x: "center"
                anchor_y: "bottom"
                
                MDBoxLayout:
                    orientation: "horizontal"
                    size_hint_y: 0.2  # Controls vertical space taken
                    spacing: "10dp"  # Prevents buttons from touching

                    MDButton:
                        id: complete_button
                        style: "elevated"
                        theme_width: "Custom"
                        height: "80"
                        size_hint_x: 0.3  
                        on_press: root.return_home()
                        disabled: False

                        MDButtonText:
                            text: "Complete"
                            pos_hint: {"center_x": 0.5, "center_y": 0.5}
                            font_style: "Title"

                    MDButton:
                        id: perform_servicing_button
                        style: "elevated"
                        theme_width: "Custom"
                        height: "80"
                        size_hint_x: 0.7  
                        on_press: root.open_service_screen()

                        MDButtonText:
                            id: runs_since_last_service
                            text: "Perform Servicing\nRuns Since Last Service: 0"  # Default placeholder text
                            halign: "center"
                            font_style: "Title"
                            pos_hint: {"center_x": 0.5, "center_y": 0.5}
