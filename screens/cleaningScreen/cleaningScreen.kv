<CleaningScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        md_bg_color: app.theme_cls.primary_color

        MDTopAppBar:
            type: "small"
            size_hint_x: 1.01
            pos_hint: {"center_x": .5, "center_y": .5}

            MDTopAppBarLeadingButtonContainer:
                MDActionTopAppBarButton:
                    icon: "home"
                    on_press: root.return_home()

            MDTopAppBarTitle:
                text: "Cleaning Instructions"
                pos_hint: {"center_x": .5}

        # ----------------------------------
        # CAROUSEL SECTION
        # ----------------------------------
        Carousel:
            id: setup_steps
            size_hint_y: 0.85
            padding: "10dp"
            spacing: "10dp"
            loop: True

        # ----------------------------------
        # BOTTOM SECTION
        # ----------------------------------
        MDBoxLayout:
            orientation: "horizontal"
            size_hint_y: 0.15
            spacing: "10dp"
            padding: "10dp"

            MDButton:
                id: complete_button
                style: "elevated"
                theme_width: "Custom"
                height: "60dp"
                size_hint_x: 0.4
                on_press: root.return_home()
                disabled: False

                MDButtonText:
                    text: "Complete"
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    font_style: "Title"

            MDButton:
                id: perform_servicing_button
                style: "elevated"
                theme_width: "Custom"
                height: "60dp"
                size_hint_x: 0.6
                on_press: root.open_service_screen()

                MDButtonText:
                    id: runs_since_last_service
                    text: "[size=22sp]Perform Servicing[/size]\n[size=14sp]Runs Since Last Service: 0[/size]"
                    halign: "center"
                    font_style: "Title"
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
