<SelectTestType>:
    MDBoxLayout:
        orientation: 'vertical'
        md_bg_color: 0, 0, 1, 1

        MDTopAppBar:
            type: "small"
            size_hint_x: 1.01
            pos_hint: {"center_x": .5, "center_y": .5}


            MDTopAppBarLeadingButtonContainer:

                MDActionTopAppBarButton:
                    image: "Rhys"
                    on_press: root.return_home()    


            MDTopAppBarTitle:
                text: "Test Type Selection"
                pos_hint: {"center_x": .5}

    
            MDTopAppBarTrailingButtonContainer:

                MDActionTopAppBarButton:
                    icon: "tune"
                    on_press: root.open_settings()


        # ----------------------------------
        # MIDDLE SECTION (2/3 of leftover space)
        # ----------------------------------

        MDLabel:
            text: "Select Test Department"
            font_style: "Display"
            halign: "center"
            size_hint_y: 0.33
            spacing: "20dp"
            padding: "20dp"

        # ----------------------------------
        # BOTTOM SECTION (1/3 of leftover space)
        # ----------------------------------
        MDBoxLayout:
            orientation: "horizontal"
            size_hint_y: 0.67
            padding: "20dp"
            spacing: "10dp"

            MDButton:
                style: "elevated"
                on_press: root.open_emergency_patients_screen()
                size_hint_x: 0.3
                size_hint_y: 0.3
               
                MDButtonText:
                    text: "Emergency"


            MDButton:
                style: "elevated"
                on_press: root.open_oncology_patients_screen()
                size_hint_x: 0.3
                size_hint_y: 0.3

                MDButtonText:
                    text: "Oncology"