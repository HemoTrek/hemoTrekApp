<SelectTestType>:
    MDBoxLayout:
        orientation: 'vertical'
        md_bg_color: 'blue'

        MDTopAppBar:
            type: "small"
            size_hint_x: 1.01
            pos_hint: {"center_x": .5, "center_y": .5}

            MDTopAppBarTitle:
                text: "Home Page"
                pos_hint: {"center_x": .5}

            MDTopAppBarTrailingButtonContainer:

                MDActionTopAppBarButton:
                    icon: "tune"
                    on_press: root.open_settings()

        # ----------------------------------
        # MIDDLE SECTION (2/3 of leftover space)
        # ----------------------------------

        MDLabel:
            text: "Welcome to HemoTrek!"
            font_style: "Display"
            halign: "center"
            size_hint_y: 0.66
            spacing: "20dp"
            padding: "20dp"

        # ----------------------------------
        # BOTTOM SECTION (1/3 of leftover space)
        # ----------------------------------
        MDBoxLayout:
            orientation: "vertical"
            size_hint_y: 0.34
            padding: "20dp"
            spacing: "10dp"

            # A large button filling this bottom layout
            MDButton:
                style: "elevated"
                on_press: root.open_listPatients()

                MDButtonText:
                    text: "Run"
